extends ../base

block content 
    form(method="post", enctype="multipart/form-data")
        h4 Upload Form
        label(for="video") Video File 
        input(name="video", type="file", accept="video/*", require, id="video")
        input(name="title", placeholder="Title", require, type="text" )
        input(name="description", placeholder="Description", require, type="text" )
        input(name="hashtags", placeholder="Hashtags separated by comma.", require, type="text" )
        input(value="Upload" type="submit")